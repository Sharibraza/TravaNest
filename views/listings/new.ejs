<% layout("/listings/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Create a new Listing</h3>
                <form method="POST" action="/listings" class="needs-validation" novalidate
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" placeholder="Enter title" required
                            class="form-control">
                        <div class="valid-feedback"> Looks good! </div>
                        <div class="invalid-feedback"> Please enter a Title </div>
                    </div>

                    <div>
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" placeholder="Enter description" required
                            class="form-control"></textarea>
                        <div class="invalid-feedback"> Please enter a short discription </div>
                    </div>

                    <div>
                        <label for="image" class="form-label">Upload Listing Image </label>
                        <input type="file" name="listing[image]" class="form-control" required>
                        <div class="invalid-feedback"> Please enter a image </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div>
                                <label for="price" class="form-label">Price</label>
                                <input name="listing[price]" placeholder="Enter price" required class="form-control">
                                <div class="invalid-feedback"> Please enter a valid price </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div>
                                <label for="country" class="form-label">Country</label>
                                <input type="text" name="listing[country]" placeholder="Enter country" required
                                    class="form-control">
                                <div class="invalid-feedback"> Please enter your country </div>
                            </div>
                        </div>
                    </div>

                    <div>
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" placeholder="Enter location" required
                            class="form-control">
                        <div class="invalid-feedback"> Please enter your current Location</div>
                    </div>

                    <br><br>
                    <button class="btn btn-dark add-btn mt-3">Add</button>
                </form>
            </div>
        </div>