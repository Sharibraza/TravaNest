<%- layout("/listings/layouts/boilerplate") %>
  <style>
    .carousel-wrapper {
      position: relative;
      max-width: 75%;
      overflow: hidden;
    }

    .carousel {
      display: flex;
      left: 2rem;
      overflow-x: auto;
      scroll-behavior: smooth;
      scrollbar-width: none;
    }

    .carousel::-webkit-scrollbar {
      display: none;
      /* Chrome, Safari */
    }

    .carousel-item {
      height: 8rem;
      display: block;
      flex: 0 0 auto;
      text-align: center;
      align-items: center;
      margin-top: 4rem;
      margin-right: 2rem;
      opacity: 0.7;
      width: 63px;

      &:hover {
        opacity: 1;
        cursor: pointer;
      }
    }


    .icon-circle {
      width: 38px;
      height: 38px;
      background-color: #f2f2f2;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 18px;
      margin: auto;
    }

    .label {
      margin-top: 4px;
      font-size: 12px;
    }

    .arrow-btn {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: white;
      border: 1px solid #ccc;
      border-radius: 50%;
      width: 28px;
      height: 30px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      z-index: 10;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      font-size: 1.2rem;
    }

    .arrow-left {
      left: 0;
    }

    .arrow-right {
      right: 0;

    }

    a {
      text-decoration: none;
      color: black;
    }
  </style>
  <div class="carousel-wrapper">
    <div class="arrow-btn arrow-left" onclick="scrollCarousel(-300)">&#8249;</div>
    <div class="carousel" id="carousel">
      <div class="carousel-item ">
        <a href="/listings">
          <div class="icon-circle"><i class="fa-solid fa-globe"></i></div>
        </a>
        <div class="label">All</div>
      </div>
      <div class="carousel-item ">
        <a href="/listings?category=Trending">
          <div class="icon-circle"><i class="fa-solid fa-fire"></i></div>
        </a>
        <div class="label">Trending</div>
      </div>
      <div class="carousel-item  ">
        <a href="/listings?category=IconicCites">
          <div class="icon-circle"><i class="fa-solid fa-mountain-city"></i></div>
        </a>
        <div class="label">Iconic <br> Cites</div>
      </div>
      <div class="carousel-item ">
        <a href="/listings?category=Tropical">
          <div class="icon-circle"> <i class="fa-solid fa-tree"></i></div>
          <div class="label">Tropical</div>
        </a>
      </div>
      <div class="carousel-item  ">
        <a href="/listings?category=Mountains">
          <div class="icon-circle"><i class="fa-solid fa-mountain"></i></div>
          <div class="label">Mountains</div>
        </a>
      </div>
      <div class="carousel-item  ">
        <a href="/listings?category=HistoricalHomes">
          <div class="icon-circle"><i class="fa-solid fa-landmark-dome"></i> </div>
          <div class="label">Historical <br>Homes</div>
        </a>
      </div>

      <div class="carousel-item  ">
        <a href="/listings?category=Farms">
          <div class="icon-circle"><i class="fa-solid fa-cow"></i></div>
          <div class="label">Farms</div>
        </a>
      </div>
      <div class="carousel-item  ">
        <a href="/listings?category=Domes">
          <div class="icon-circle"><i class="fa-solid fa-igloo"></i></div>
          <div class="label">Domes</div>
        </a>
      </div>

      <div class="carousel-item  ">
        <a href="/listings?category=BeachFront">
          <div class="icon-circle"> <i class="fa-solid fa-umbrella-beach"></i></div>
          <div class="label">BeachFront</div>
        </a>
      </div>

      <div class="carousel-item  ">
        <a href="/listings?category=Castles">
          <div class="icon-circle"><i class="fa-brands fa-fort-awesome"></i></div>
          <div class="label">Castles</div>
        </a>
      </div>
      <div class="carousel-item  ">
        <a href="/listings?category=Rooms">
          <div class="icon-circle"><i class="fa-solid fa-bed"></i></div>
        </a>
        <div class="label">Rooms</div>
      </div>
      <div class="carousel-item  ">
        <a href="/listings?category=AmazingPools">
          <div class="icon-circle"><i class="fa-solid fa-person-swimming"></i></div>
          <div class="label">Amazing <br>pools</div>
        </a>
      </div>

      <div class="carousel-item  ">
        <a href="/listings?category=camping">
          <div class="icon-circle"><i class="fa-solid fa-campground"></i></div>
          <div class="label">camping</div>
        </a>

      </div>
      <div class="carousel-item  ">
        <a href="/listings?category=Artic">
          <div class="icon-circle"><i class="fa-regular fa-snowflake"></i></div>
          <div class="label">Arctic</div>
        </a>

      </div>
      <div class="carousel-item  ">
        <a href="/listings?category=TreeHouses">
          <div class="icon-circle"><i class="fa-solid fa-tree-city"></i></div>
          <div class="label">TreeHouses</div>
        </a>
      </div>
      <div class="carousel-item  ">
        <a href="/listings?category=Hotels">
          <div class="icon-circle"><i class="fa-solid fa-hotel"></i></div>
          <div class="label">Hotels</div>
        </a>

      </div>
      <div class="carousel-item  ">
        <a href="/listings?category=Tents">
          <div class="icon-circle"> <i class="fa-solid fa-tents"></i></div>
          <div class="label">Tents</div>
        </a>

      </div>
      <div class="carousel-item  ">
        <a href="/listings?category=Valley">
          <div class="icon-circle"><i class="fa-solid fa-mountain-sun"></i></div>
          <div class="label">Valley</div>
        </a>
      </div>
    </div>
    <div class="arrow-btn arrow-right mr-3" onclick="scrollCarousel(300)">&#8250;</div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3" id="Listings">
    <% for(let list of listing) {%>
      <a href="/listings/<%= list._id %>" class="list-link">
        <div class="card listing-card">
          <img src=<%=list.image.url%> class="card-img-top " alt="..." style="height: 20rem;">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text ">
              <%= list.title %> <br>
                <%= list.price.toLocaleString("en-IN") %> / night
                  <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
            </p>
          </div>
        </div>
      </a>
      <% } %>
  </div>
  <script>
    function scrollCarousel(amount) {
      document.getElementById('carousel').scrollBy({
        left: amount,
        behavior: 'smooth'
      });
    }


  </script>